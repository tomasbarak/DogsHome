        height: calc(100% - 60px);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #f5f5f5;
        opacity: 0;
        overflow: hidden;
        z-index: 1;
    }

    #chat-loading-container.visible {
        opacity: 1;
        visibility: visible;
        transition: all 0.5s ease;
        
    }

    #chat-loading-container.invisible {
        opacity: 0;
        visibility: hidden;
        transition: all 0.5s ease;
        
    }

    #chat-loading-container > .chat-loading-animation {
        width: 100%;
        max-height: 200px;
    }

    #chat-container {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: flex-start;
