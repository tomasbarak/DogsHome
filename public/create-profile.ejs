<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./head.ejs'); %>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar perfil</title>
    <link rel="stylesheet" href="/stylesheets/publications/expandible-menu.css">
</head>
<style>
    body,
    html {
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;
    }

    * {
        font-family: 'Lato', sans-serif;
    }

    #page-container {
        position: relative;
        height: 100%;
        width: 100%;
        padding: 0;
        margin: 0;
    }

    #page-header {
        width: 100%;
        height: 300px;
        background-color: rgba(7, 146, 146, 95);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        box-shadow: inset 0px 0px 50px rgba(0, 0, 0, 0.5);
    }

    #page-body {
        width: 100%;
        height: calc(100% - 300px);
        min-height: 500px;
    }

    #action-name {
        font-size: 40px;
        color: white;
        font-weight: bolder;
    }

    .action-container {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .input-container {
        display: flex;
        align-items: flex-start;
        flex-direction: column;
        font-size: 10pt;
        margin-bottom: 15px;
        margin-top: 10px;
        width: fit-content;
    }

    input {
        height: 50px;
        width: 25vw;
        border-width: 0;
        border-bottom-width: 1px;
        border-color: #d3d3d3;
        transition: 0.25s;
        max-width: 350px;
    }

    textarea:focus, input:focus {
        transition: 0.25s;
        outline: none;
        border-color: #079292;
    }

    #buttons-container{
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        height: fit-content;
        display: flex;
        flex-direction: row-reverse;
        justify-content: space-between;
        align-items: center;
        box-sizing: border-box;
        padding: 15px;
    }
    #next-button{
        transition: .5s;
        width: 100px;
        height: 50px;
        border-radius: 5px;
        background-color: #079292;
        display: flex;
        justify-content: center;
        align-items: center;
        color: white;
        font-size: 15px;
        text-decoration: none;
        box-shadow: 0px 0px 5px rgba(0, 0, 0, .75);
        cursor: pointer;
    }
    #logout-button{
        transition: .5s;
        width: 100px;
        height: 50px;
        border-radius: 5px;
        background-color: transparent;
        display: flex;
        justify-content: center;
        align-items: center;
        color: red;
        font-size: 15px;
        text-decoration: none;
        box-shadow: none;
        cursor: pointer;
    }
    #logout-button:hover{
        transition: .5s;
        color: rgb(200, 0, 0)
    }
    #next-button:hover{
        transition: .5s;
        background-color: rgb(17, 156, 156);
        box-shadow: 0px 0px 10px rgba(7, 146, 146, .75);
    }
    textarea{
        border: 2px solid #d3d3d3;
        border-radius: 8px;
    }
    #action-buttons-container{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: fit-content;
        height: fit-content;
    }
    #skip-button{
        margin-bottom: 15px;
        cursor: pointer;
    }
    #action-btn-subcontainer{
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        width: fit-content;
        height: fit-content;
    }
    @media screen and (max-width: 1024px){
        input{
            height: 50px;
            width: 50vw;
        }
        #action-name {
            font-size: 30px;
        }
    }
    @media screen and (max-width: 480px){
        input{
            height: 50px;
            width: 75vw;
        }
        #action-name {
            font-size: 25px;
        }
    }
</style>
<style>

</style>
<script>
    function enter() {
        if (event.keyCode == 13) {
            event.preventDefault();
            sendData();
        }
    }
</script>
<body>
    <div id="page-container">
        <div id="page-header">
            <a id="action-name"><%= action %> </a>
        </div>
        <div id="page-body">
            <%- include('./actions/' + actionRawName + '.ejs'); %>
        </div>
        <div id="buttons-container">
            <div id="action-buttons-container">
                <% if (skippable) { %>
                    <a id="skip-button" onclick="skipStep()">Saltar</a>
                <% } %>
                <div id="action-btn-subcontainer">
                    <% if (canGoBack) { %>
                        <svg id="back-button" style="margin-bottom: 8px; margin-right: 5px; cursor: pointer; display: flex;" onclick="goBack()" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="24" height="24"><path fill-rule="evenodd" d="M9.78 12.78a.75.75 0 01-1.06 0L4.47 8.53a.75.75 0 010-1.06l4.25-4.25a.75.75 0 011.06 1.06L6.06 8l3.72 3.72a.75.75 0 010 1.06z"></path></svg>
                    <% } %>
                    <a id="next-button" onclick="sendData()">Siguiente</a>
                </div>
            </div>
            <a id="logout-button" onclick="logout()">Cerrar sesión</a>
        </div>
    </div>
</body>
<script>
    function logout(){
        Swal.fire({
            title: 'Cerrando Sesión',
            allowOutsideClick: false,
            allowEscapeKey: false,
            allowEnterKey: false,
            showConfirmButton: false,
            didOpen: () => {
                Swal.showLoading();
            }
        })
        axios.post(`https://${window.location.host}/sessionLogout`)
            .then(function (response) {
                Swal.close();
                window.location = '/signin';
            })
            .catch(function (error) {
                console.log(error);
            });
    }
</script>
<% if (canGoBack) { %>
    <script>
        function goBack() {
            Swal.fire({
                title: 'Retrocediendo',
                allowOutsideClick: false,
                allowEscapeKey: false,
                allowEnterKey: false,
                showConfirmButton: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            })
            axios.post(`https://${window.location.host}/profile/creation/step/back`)
                .then(function (response) {
                    window.location.reload();
                })
                .catch(function (error) {
                    console.log(error);
                });
        }
    </script>
<% } %>
</html>