<style>
    #container-all{
        width: 100%;
        height: 400px;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }
    #location-dropdown-container{
        width: 100%;
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        position: absolute;
        margin-left: auto;
        margin-right: auto;
        left: 0;
        right: 0;
        top: calc(60px + 50vh - 60px - 100px);
        flex-direction: row;
    }
    #departamento{
        position: absolute;
        margin-left: auto;
        margin-right: auto;
        left: 0;
        right: 0;
        top: calc(50vh - 60px + 30px + 60px + 15px);
        border-radius: 5px;
    }
    .dropdown-container {
        height: 60px;
        width: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: white;
        position: relative;
        border: 1.5px solid rgba(0, 0, 0, 0.1);
        border-radius: 5px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        transition: border .5s;
        font-size: 1.25rem;
        font-family: 'Lato', sans-serif;
        color: #444;
        font-weight: normal;
        padding: 5px;
        box-sizing: border-box;
    }
    .text-search-container{
        height: 60px;
        width: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: white;
        position: relative;
        border: 1.5px solid rgba(0, 0, 0, 0.1);
        border-radius: 5px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        transition: border .5s;
        font-size: 1.25rem;
        font-family: 'Lato', sans-serif;
        color: #444;
        font-weight: normal;
        padding: 0;
        box-sizing: border-box;
    }
    .dropdown-container + .dropdown-container{
        margin-left: 15px;
    }
    .dropdown-container + .text-search-container{
            margin-top: 15px;
    }
    .dropdown{
        width: 100%;
        height: 100%;
        border: none;
        border-radius: 5px;
        font-size: 1.25rem;
        font-family: 'Lato', sans-serif;
        color: #444;
        background-color: transparent;
        font-weight: normal;
        outline: none !important;
        text-align: center;
    }

    #departamento > input{
        transition: .25s;
        width: 100%;
        height: 100%;
        padding: 0 8px;
        border: 0;
        font-size: 1.25rem;
        font-family: 'Lato', sans-serif;
        text-align: center;
        color: #444;
        font-weight: normal;
        border-radius: 5px;
    }

    input:focus{
        transition: .25s;
        outline: none !important;
        border: 1px solid #079292 !important;
    }
    .ui-menu  {
        background: white;
        list-style: none;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        width: fit-content;
        max-height: 150px;
        overflow-y: scroll;
        top: 25px !important;
        box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.1);
        border-bottom-left-radius: 5px;
        border-bottom-right-radius: 5px;
    }

    .ui-menu-item{
        transition: .25s;
        font-size: 1rem;
        width: 100%;
        height: 50px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 15px 0;
        user-select: none;
        cursor: pointer;
    }


    .ui-menu-item + .ui-menu-item{
        border-top: 1px solid rgba(0, 0, 0, 0.1);
    }

    .ui-menu-item:hover{
        transition: .25s;
        background-color: rgba(0, 0, 0, 0.1);
        color: #079292;
    }

    .ui-helper-hidden-accessible{
        display: none;
    }
    .ui-state-active{
        color: #079292;
    }
    @media screen and (max-width: 600px){
        #location-dropdown-container{
            flex-direction: column;
            top: calc(60px + 50vh - 25px - 100px);
        }
        #departamento{
            top: calc(60px + 50vh + 155px - 100px );
        }
        .dropdown-container + .dropdown-container{
            margin-left: 0;
            margin-top: 15px;
        }
        div + .text-search-container{
            margin-top: 0;
        }
        .dropdown-container {
            height: 60px;
            width: 300px;
        }
        .text-search-container{
            height: 60px;
            width: 300px;
        }
        .ui-menu  {
            background: white;
            list-style: none;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
            width: fit-content;
            max-height: 150px;
            overflow-y: scroll;
            top: 95px !important;
            box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.1);
            border-bottom-left-radius: 5px;
            border-bottom-right-radius: 5px;
        }
    }
</style>

<div class="first-half-container">
    <h1 class="create-title">Seleccioná la ubicación</h1>
</div>
    <div id="location-dropdown-container">
        <div class="dropdown-container">
            <a>Argentina</a>
        </div>
        <div class="dropdown-container">
            <select name="Provincia" class="dropdown" id="province-dropdown">
                <option disabled="" selected="" value="">Provincia...</option>
                <%- include('./provinces_options.ejs') %> 
            </select>
        </div>
    </div>
    <div class="text-search-container " id="departamento">
        <input type="text" placeholder="Departamento..." id="dep-input">
    </div>
<script>
    let province_departments = {};

    String.prototype.replaceAll = function(search, replacement) {
        var target = this;
        return target.replace(new RegExp(search, 'g'), replacement);
    };

    window.onload = () => {
        const select = document.getElementById('province-dropdown');
        if(select.selectedIndex > 0){
            const province = select.options[select.selectedIndex].text;
            const parsed_province = province.replaceAll(' ', '_').toLowerCase();
            requestDepartments(parsed_province).then((response) => {
                const data = response.data;
                const departments = data.departamentos;
                province_departments[parsed_province] = departments;
                console.log(`Fetched ${parsed_province} departments from server`)
                let dep_name = province_departments[parsed_province].map(value => { return value.nombre });
                $("#dep-input").autocomplete({
                    source: dep_name,
                    position: {  collision: "flip"  },
                });
            })
        }
    }
    document.querySelector('#province-dropdown').addEventListener('change', function(e){
        const selector = e.target;
        const index = selector.selectedIndex;
        const province = selector.options[index].text;
        const parsed_province = province.replaceAll(" ", "_").toLowerCase();

        if(!(parsed_province in province_departments)) {
            requestDepartments(parsed_province).then((response) => {
                const data = response.data;
                const departments = data.departamentos;
                province_departments[parsed_province] = departments;
                console.log(`Fetched ${parsed_province} departments from server`)
                let dep_name = province_departments[parsed_province].map(value => { return value.nombre });
                $("#dep-input").autocomplete({
                    source: dep_name,
                    position: {  collision: "flip"  },
                });
            })
        }else{
            let dep_name = province_departments[parsed_province].departamentos.map(value => { return value.nombre });
            $("#dep-input").autocomplete({
                    source: dep_name,
                    position: {  collision: "flip"  }
            });
        }
        
    });
    $("#dep-input").trigger("change");
    function requestDepartments(province){
        const parsed_province = province.replaceAll(" ", "_").toLowerCase();
        return new Promise((resolve, reject) => {
            axios.get(`https://${window.location.hostname}/draft-steps/departments/${parsed_province}.json`).then(function (response) {
                resolve(response);
            }).catch(function (error) {
                reject(error);
            });
        })
    }
    const updateDraft = (draftId) => {
        Swal.fire({
            title: 'Actualizando borrador',
            text: 'Esperá un momento',
            didOpen: () => {
                Swal.showLoading();
            },
            allowOutsideClick: false,
            allowEscapeKey: false,
            allowEnterKey: false,

        });
        axios.post(`https://${window.location.hostname}/update/publication/draft/${draftId}/`, {
            province: document.getElementById('province-dropdown').value,
        }).then(res => {
            console.log(res);
            if(res.status === 200){
                window.location.reload();
            }else{
                Swal.fire({
                        type: 'error',
                        title: 'Oops...',
                        text: 'Algo salió mal, intenta de nuevo',
                        confirmButtonColor: '#079292'
                });
            }
        }).catch(err => {
            console.log(err);
            Swal.fire({
                        type: 'error',
                        title: 'Oops...',
                        text: 'Algo salió mal, intenta de nuevo',
                        confirmButtonColor: '#079292'
            });
        });
    }

    
</script>